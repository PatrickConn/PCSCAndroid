<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ViewCoaches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Scratch off the overlay image"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            style="@style/button"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="169dp"
            android:src="@mipmap/overlay"
            android:layout_weight="0.57"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:minHeight="150dp"
            android:minWidth="150dp"
            android:clickable="false" />

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/but_New_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Buy new card"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            android:onClick="onClick"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Back"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            android:onClick="Back"
            android:textColor="#fff"

            android:layout_below="@+id/btnChangeImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btnChangeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Scratch Cards"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            android:onClick="ScratchAcards"
            android:textColor="#fff"
            android:layout_below="@+id/but_New_Card"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</LinearLayout>


